{
  "include": [
    "NetscriptDefinitions.d.ts",
    "src/**/*",
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "sourceRoot": "http://localhost:8000/sources/",
    "strict": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "baseUrl": "src/",
    "paths": {
      "/*.js": [
        "*"
      ],
      "*.js": [
        "*"
      ],
      "@ns": [
        "../NetscriptDefinitions.d.ts"
      ]
    }
  }
}